{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "laravel/laravel",
    "type": "project",
    "description": "The skeleton application for the Laravel framework.",
    "keywords": ["laravel", "framework"],
    "license": "MIT",
    "require": {
        "php": "^8.2",
        "aws/aws-sdk-php": "^3.346",
        "bacon/bacon-qr-code": "^3.0",
        "barryvdh/laravel-dompdf": "^3.1",
        "firebase/php-jwt": "^6.11",
        "google/apiclient": "^2.18",
        "laravel/framework": "^11.31",
        "laravel/sanctum": "^4.0",
        "laravel/tinker": "^2.9",
        "league/flysystem-aws-s3-v3": "^3.0",
        "mailerlite/mailerlite-php": "^1.0",
        "pragmarx/google2fa-laravel": "^2.3",
        "spatie/laravel-data": "^4.0",
        "spatie/laravel-medialibrary": "^11.12",
        "spatie/laravel-permission": "^6.22"
    },
    "require-dev": {
        "fakerphp/faker": "^1.23",
        "barryvdh/laravel-ide-helper": "^3.0",
        "driftingly/rector-laravel": "^2.0",
        "larastan/larastan": "^3.2",
        "laravel/pail": "^1.1",
        "laravel/pint": "^1.13",
        "laravel/sail": "^1.26",
        "pestphp/pest": "*",
        "mockery/mockery": "^1.6",
        "nunomaduro/collision": "^8.1",
        "phpunit/phpunit": "^11.0.1",
        "pestphp/pest-plugin-laravel": "*",
        "pestphp/pest-plugin-type-coverage": "^3.5",
        "rector/rector": "^2.0",
        "spatie/laravel-ignition": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/",
            "Src\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi",
            "@php -r \"file_exists('database/database.sqlite') || touch('database/database.sqlite');\"",
            "@php artisan migrate --graceful --ansi"
        ],
        "dev": [
            "Composer\\Config::disableProcessTimeout",
            "npx concurrently -c \"#93c5fd,#c4b5fd,#fb7185,#fdba74\" \"php artisan serve\" \"php artisan queue:listen --tries=1\" \"php artisan pail --timeout=0\" \"npm run dev\" --names=server,queue,logs,vite"
        ],
        "larastan": "vendor/bin/phpstan analyse --configuration=phpstan.neon --memory-limit=1G",
        "rector": "vendor/bin/rector process src --config rector.php",
        "pre-pr": [
            "@composer larastan",
            "@composer rector",
            "@composer pint",
            "@composer pest-tests"
        ],
        "pint": "vendor/bin/pint",
        "pest-tests-coverage": "vendor/bin/pest",
        "pest-tests-type-coverage": "vendor/bin/pest",
        "pest-tests": "vendor/bin/pest"
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
